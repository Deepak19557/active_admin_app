<br>
<%= form_with model: @user do |form| %>
  
  <div>
    <%= form.label :first_name %><br>
    <%= form.text_field :first_name %>    
  </div>

  <div>
    <%= form.label :last_name %><br>
    <%= form.text_area :last_name %><br>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>


<table style="margin-top:20px;width:10%;font-family: serif" class="table table-striped table-bordered table-hover ">
  <thead class="thead-dark">
    <tr>
      <th>First_Name</th>
      <th>Last_Name</th>
      <th>actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr style="background:#444;color:#fff;font-family: serif">
        <td><%= user.first_name %></td>
				<td><%= user.last_name %></td>
				<td><%= link_to 'View User', user_path(user), remote: true %></td>
				</tr>    
     <% end%>
  </tbody>
</table>

<div id='post-content'></div>


